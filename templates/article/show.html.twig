{% extends "base.html.twig" %}

{% block title %}
	{{article.title | title}}
{% endblock %}

{% block body %}

	<div class="shadow border p-5 my-5">
		<h1 class="my-5 text-center border shadow">
			{{article.title | title}}
		</h1>

		<p class="text-left h4">
			Ecrit le :
			{{article.creationDate | date('d/m/Y Ã  H:i')}}, par
			{{article.author}}
		</p>

		<img src="{{article.image}}" alt="photo de l'article {{article.title}}" width="450px">

		<div class="my-5 shadow  border p-5">
			<hr>
			{{article.content | raw}}
			<hr>
		</div>

		<hr>
		<div>
			<a href="{{ path('article_edit' , {'slug': article.slug } ) }}" class="btn btn-info mx-2">
				Modifier l'article
				<i class="fa fa-pen"></i>
			</a>

			<form class="d-inline" action="{{ path('article_delete' , {'slug': article.slug } ) }}" onsubmit="return confirm('Etes vous sur de vouloir supprimer cette article ?');">
				<button class="btn btn-danger mx-2">
					Supprimer l'article
					<i class="fa fa-trash"></i>
				</button>
			</form>
		</div>

		<div>
			<p class="h3 text-center p-2 shadow">
				Soyez le premier a commenter !
				<br>
				<i class="fa fa-comments my-2"></i>
			</p>
		</div>
	</div>

{% endblock %}
