{% extends 'base.html.twig' %}

{% block title %}
	{{user.fullname}}
{% endblock %}

{% block body %}
	
	<section class="profile">
  <header class="header ">
    <div class="details">
      <img src="{{app.user.avatar}}" alt="{{app.user.fullname}}" class="profile-pic">
      <h1 class="heading">{{app.user.fullname}}</h1>
      <div class="location">
        <p>{{app.user.email}}</p>
		
      </div>
      <div class="stats mt-4">
        <div class="col-4">
          <h4>{{app.user.articles | length }}</h4>
          <p>Articles en ligne</p>
        </div>
        <div class="col-4">
          <h4>10</h4>
          <p>Commentaires</p>
        </div>
        <div class="col-4">
          <h4>Junior</h4>
          <p>Statut</p>
        </div>
      </div>
	   <div class="row mt-4">
			<div class="col-6">
				<a href="{{ path('user_edit' , {'slug': user.slug } ) }}" class="btn btn-success">Modifier <i class="fa fa-pen"></i></a>
			</div>
			<div class="col-6">
				<form class="d-inline" action="{{ path('user_delete' , {'slug': user.slug } ) }}" 
				onsubmit="return confirm('Etes vous sur de vouloir supprimer cette article ?');">
				<button class="btn btn-danger mx-2">Supprimer <i class="fa fa-trash"></i></button>
			</div>
		</div>
    </div>
  </header>
</section>
{% endblock %}

{% block footer %}{% endblock %}
